<h2 class="register-header">Sign up</h2>

<div class="register">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label :first_name, class: "register__label" %><br />
      <%= f.text_field :first_name, autofocus: true, class: "register__field" %>
    </div>
  
    <div class="field">
      <%= f.label :last_name, class: "register__label" %><br />
      <%= f.text_field :last_name, class: "register__field" %>
    </div>
  
    <div class="field">
      <%= f.label :email, class: "register__label" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "register__field" %>
    </div>
  
    <div class="field">
      <%= f.label :country, class: "register__label" %><br />
      <%= f.collection_select :country_id, Country.all, :id, :name, {}, class: "register__country-select" %>
    </div>
  
    <div class="field">
      <%= f.label :password, class: "register__label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "register__field" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, class: "register__label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "register__field" %>
    </div>
  
    <div class="field">
      <%= f.label :profile_picture, class: "register__label" %><br />
      <%= f.file_field :profile_picture %>
    </div>
    
  
    <div class="actions">
      <%= f.submit "Sign up", class: "register__submit-btn" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>

<h2 class="log-in-header">Log in</h2>

<div class="log-in">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "log-in__label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "log-in__field" %>
    </div>
  
    <div class="field">
      <%= f.label :password, class: "log-in__label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "log-in__field" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="log-in__actions">
      <%= f.submit "Log in", class: "log-in__submit-btn" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>

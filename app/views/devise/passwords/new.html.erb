<h2 class="forgot-pwd-header">Have you forgotten your password?</h2>

<div class="forgot-pwd">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email, class: "forgot-pwd__label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "forgot-pwd__field" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "forgot-pwd__submit-btn" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
